    "/status": {
      "get": {
        "tags": [
          "Status"
        ],
        "summary": "Get API service status",
        "description": "Returns OK if the API service is running and available.",
        "operationId": "GetStatus",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MailboxCreateModel": {
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "type": [
              "null",
              "string"
            ],
            "description": "Optional name for the mailbox. If not provided, a temporary mailbox will be created."
          },
          "projectName": {
            "maxLength": 100,
            "type": [
              "null",
              "string"
            ],
            "description": "Name of the project to associate the mailbox with. If not provided, uses the default project."
          },
          "isTemporary": {
            "type": "boolean",
            "description": "Whether the mailbox should be temporary or persistent.",
            "default": true
          }
        }
      },
      "MailboxViewModel": {
        "required": [
          "key",
          "password"
        ],
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "Unique identifier for the mailbox (<key>@devinbox.io)"
          },
          "password": {
            "type": "string",
            "description": "Password for accessing the mailbox (SMTP)"
          }
        }
      },
      "MessageCountResult": {
        "required": [
          "key",
          "count"
        ],
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "Mailbox unique identifier"
          },
          "count": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "description": "Number of messages in the mailbox",
            "format": "int32"
          }
        }
      },
      "MessageParsedViewModel": {
        "required": [
          "uniqueId",
          "from",
          "to",
          "cc",
          "bcc",
          "subject",
          "body",
          "isHtml",
          "received"
        ],
        "type": "object",
        "properties": {
          "uniqueId": {
            "type": "string",
            "description": "Unique identifier for the message",
            "format": "uuid"
          },
          "from": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "type": "string"
            },
            "description": "Array of sender email addresses"
          },
          "to": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "type": "string"
            },
            "description": "Array of recipient email addresses"
          },
          "cc": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "type": "string"
            },
            "description": "Array of CC email addresses"
          },
          "bcc": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "type": "string"
            },
            "description": "Array of BCC email addresses"
          },
          "subject": {
            "type": [
              "null",
              "object"
            ],
            "additionalProperties": {
              "type": "string"
            },
            "description": "Parsed subject template parameters"
          },
          "body": {
            "type": [
              "null",
              "object"
            ],
            "additionalProperties": {
              "type": "string"
            },
            "description": "Parsed body template parameters"
          },
          "isHtml": {
            "type": "boolean",
            "description": "Whether the email body is HTML format"
          },
          "received": {
            "type": "string",
            "description": "Timestamp when the message was received",
            "format": "date-time"
          }
        }
      },
      "MessagesViewModel": {
        "required": [
          "key",
          "count",
          "messages"
        ],
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "Mailbox unique identifier"
          },
          "count": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "description": "Total number of messages in the mailbox",
            "format": "int32"
          },
          "messages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MessageViewModel"
            },
            "description": "Collection of message view models"
          }
        }
      },
      "MessageViewModel": {
        "required": [
          "uniqueId",
          "from",
          "to",
          "cc",
          "bcc",
          "subject",
          "body",
          "isHtml",
          "received"
        ],
        "type": "object",
        "properties": {
          "uniqueId": {
            "type": "string",
            "description": "Unique identifier for the message",
            "format": "uuid"
          },
          "from": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "type": "string"
            },
            "description": "Array of sender email addresses"
          },
          "to": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "type": "string"
            },
            "description": "Array of recipient email addresses"
          },
          "cc": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "type": "string"
            },
            "description": "Array of CC email addresses"
          },
          "bcc": {
            "type": [
              "null",
              "array"
            ],
            "items": {
              "type": "string"
            },
            "description": "Array of BCC email addresses"
          },
          "subject": {
            "type": [
              "null",
              "string"
            ],
            "description": "Email subject line"
          },
          "body": {
            "type": [
              "null",
              "string"
            ],
            "description": "Email body content"
          },
          "isHtml": {
            "type": "boolean",
            "description": "Whether the email body is HTML format"
          },
          "received": {
            "type": "string",
            "description": "Timestamp when the message was received",
            "format": "date-time"
          }
        }
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": [
              "null",
              "string"
            ]
          },
          "title": {
            "type": [
              "null",
              "string"
            ]
          },
          "status": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "null",
              "integer",
              "string"
            ],
            "format": "int32"
          },
          "detail": {
            "type": [
              "null",
              "string"
            ]
          },
          "instance": {
            "type": [
              "null",
              "string"
            ]
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Mailboxes"
    },
    {
      "name": "Messages"
    },
    {
      "name": "Status"
    }
  ]
