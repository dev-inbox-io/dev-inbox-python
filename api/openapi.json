    "/messages/{key}/get": {
      "get": {
        "tags": [
          "Messages"
        ],
        "summary": "Get a specific message by ID",
        "description": "Retrieves a specific message from the specified mailbox using its unique ID.",
        "operationId": "GetMessageById",
        "parameters": [
          {
            "name": "key",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
